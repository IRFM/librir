
@PACKAGE_INIT@


set_and_check(LIBRIR_INCLUDE_DIR "${PACKAGE_PREFIX_DIR}/include")

math(EXPR BITS "8*${CMAKE_SIZEOF_VOID_P}")
IF(${BITS} MATCHES "64" AND UNIX)
	set_and_check(LIBRIR_LIB_DIRS "${PACKAGE_PREFIX_DIR}/lib64")
ELSE()
	set_and_check(LIBRIR_LIB_DIRS "${PACKAGE_PREFIX_DIR}/lib")
ENDIF()

set(LIBRIR_LIBRARIES tools geometry signal_processing video_io @PLUGINS_LIBS@)

check_required_components(librir)
